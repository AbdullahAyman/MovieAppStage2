<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.com.project.abdullah.movieapp.Activity.ItemDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="4"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:background="@color/mainheader">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:gravity="center"
                android:id="@+id/title"
                android:textColor="@color/white"
                android:textSize="@dimen/main_title"
                android:layout_margin="@dimen/fab_margin"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/fab_margin"
                android:layout_marginTop="@dimen/top_margin"
                android:src="@drawable/test"
                android:id="@+id/detail_image"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/top_margin"
                android:padding="@dimen/activity_horizontal_margin"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/year"
                    android:id="@+id/year"
                    android:textSize="@dimen/year_size"
                    android:textColor="@color/gray"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/duration"
                    android:id="@+id/duration"
                    android:textSize="@dimen/min_size"
                    android:textColor="@color/gray"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rate"
                    android:id="@+id/rate"
                    android:textSize="@dimen/small_size"
                    android:textColor="@color/black"
                    />
                <Button
                    android:layout_width="@dimen/width_btn"
                    android:layout_height="@dimen/btn_h"
                    android:layout_marginTop="@dimen/fab_margin"
                    android:text="@string/favourit"
                    android:textAllCaps="false"
                    android:id="@+id/fav"
                    android:background="@color/fav_bg"
                    android:textSize="@dimen/small_size"/>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/top_margin"
            android:id="@+id/description"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_marginLeft="@dimen/top_margin"
            android:layout_marginRight="@dimen/top_margin"
            >
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/top_margin"
            android:text="Trailers:"
            android:textSize="@dimen/min_size"
            android:id="@+id/trailer"/>
    </LinearLayout>

</RelativeLayout>
